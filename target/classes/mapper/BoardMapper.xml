<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.mapper.BoardMapper">
	<select id="list" resultType="com.example.domain.BoardVO">
	select * from tbl_board
	order by board_bno desc
	limit #{pageStart}, #{perPageNum}
	</select>
		<insert id="insert">
 		insert into tbl_board(board_category,board_title,board_writer)
 		values(#{board_category}, #{board_title}, #{board_writer})
 	</insert>
 	<select id="read" resultType="com.example.domain.BoardVO">
 		select * from tbl_board
 		where board_bno=#{board_bno}
 	</select>
 	<update id="updateViewCnt">
 		update tbl_board set viewcnt=viewcnt+1
 		where board_bno=#{board_bno}
 	</update>
 	<delete id="delete">
 		delete from tbl_board
 		where board_bno=#{board_bno}
 	</delete>
 	<update id="update">
 		update tbl_board 
 		set title=#{title},content=#{content},writer=#{writer}
 		where board_bno=#{board_bno}
 	</update>
</mapper>